<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="PhotoTidy.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PhotoTidy"
    xmlns:models="using:PhotoTidy.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:PhotoTidy.ViewModels"
    mc:Ignorable="d"
    Title="PhotoTidy">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid x:Name="RootGrid" RowSpacing="8" ColumnSpacing="8" Padding="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Folder input area -->
        <StackPanel Orientation="Horizontal" Spacing="8">
            <TextBox x:Name="FolderTextBox" Width="500" Text="{x:Bind ViewModel.FolderPath.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" PlaceholderText="フォルダパスを入力 (Enter で読み込み)" KeyDown="FolderTextBox_KeyDown"/>
            <Button Content="参照" Command="{x:Bind ViewModel.BrowseCommand}"/>
            <Button Content="読み込み" Command="{x:Bind ViewModel.LoadCommand}"/>
            <TextBlock Margin="12,0,0,0" VerticalAlignment="Center" Foreground="Gray" Text="{x:Bind ViewModel.Status.Value}"/>
        </StackPanel>

        <!-- Image list -->
        <GridView x:Name="ImagesGrid" Grid.Row="1" IsItemClickEnabled="True" SelectionMode="None" ItemsSource="{x:Bind ViewModel.Images}">
            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsWrapGrid MaximumRowsOrColumns="0" Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="vm:ImageItemViewModel">
                    <StackPanel Width="160" Margin="4" DoubleTapped="ImageItem_DoubleTapped">
                        <Border CornerRadius="4" BorderBrush="#33000000" BorderThickness="1">
                            <Image Source="{x:Bind Thumbnail.Value, Mode=OneWay}" Stretch="UniformToFill" Width="160" Height="110"/>
                        </Border>
                        <TextBlock TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" FontSize="12" Margin="0,4,0,0" Text="{x:Bind FileName.Value}"/>
                    </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Grid>
</Window>
