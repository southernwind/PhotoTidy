<Window
    x:Class="PhotoTidy.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PhotoTidy"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:PhotoTidy.ViewModels"
    xmlns:models="using:PhotoTidy.Models"
    mc:Ignorable="d"
    Title="PhotoTidy">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid x:Name="RootGrid" RowSpacing="8" ColumnSpacing="8" Padding="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Folder input area -->
        <StackPanel Orientation="Horizontal" Spacing="8">
            <TextBox x:Name="FolderTextBox" Width="500" Text="{x:Bind ViewModel.FolderPath.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" PlaceholderText="フォルダパスを入力 (Enter で読み込み)" KeyDown="FolderTextBox_KeyDown"/>
            <Button Content="参照" Command="{x:Bind ViewModel.BrowseCommand}"/>
            <Button Content="読み込み" Command="{x:Bind ViewModel.LoadCommand}"/>
            <TextBlock Margin="12,0,0,0" VerticalAlignment="Center" Foreground="Gray" Text="{x:Bind ViewModel.Status.Value}"/>
        </StackPanel>

        <Expander Grid.Row="1" HorizontalAlignment="Stretch">
            <Expander.Header>
                <TextBlock Text="タグ定義 (ショートカット用候補)" FontWeight="SemiBold" />
            </Expander.Header>
            <StackPanel Spacing="8" Padding="4">
				<StackPanel Orientation="Horizontal">
		            <Button Content="行を追加" HorizontalAlignment="Left" Command="{x:Bind ViewModel.AddTagDefinitionCommand}" />
					<Button Content="移動" Width="72" Command="{x:Bind ViewModel.MoveFilesCommand}" />
				</StackPanel>
				<ItemsControl ItemsSource="{x:Bind ViewModel.Tags}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="models:TagInfo">
                            <StackPanel Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
                                <!-- Key capture textbox: press key to assign, Delete/Backspace to clear -->
                                <TextBox Width="140"
                                         PlaceholderText="キー"
                                         IsReadOnly="True"
                                         Text="{x:Bind Key.Value, Mode=OneWay}"
                                         KeyDown="TagKeyTextBox_KeyDown"/>
                                <TextBox Width="160" PlaceholderText="タグ名" Text="{x:Bind Name.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                <TextBox Width="260" IsReadOnly="True" PlaceholderText="ターゲットフォルダ" Text="{x:Bind TargetFolder.Value, Mode=OneWay}"/>
								<Button Content="…" Width="32" Click="TargetFolderBrowseButton_Click" />
							</StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Expander>

        <GridView
            x:Name="ImagesGrid"
            Grid.Row="2"
            IsItemClickEnabled="True"
            SelectionMode="Single"
            ItemsSource="{x:Bind ViewModel.Images}"
            SelectedIndex="{x:Bind ViewModel.SelectedIndex.Value, Mode=TwoWay}">
            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsWrapGrid MaximumRowsOrColumns="0" Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="vm:ImageItemViewModel">
                    <StackPanel Width="160" Margin="4" DoubleTapped="ImageItem_DoubleTapped">
                        <Border CornerRadius="4" BorderBrush="#33000000" BorderThickness="1">
                            <Grid>
                                <Image Source="{x:Bind Thumbnail.Value, Mode=OneWay}" Stretch="UniformToFill" Width="160" Height="110" />
                                <Border x:Name="TagBadge" Background="#AA000000" Padding="4" HorizontalAlignment="Right" VerticalAlignment="Top" CornerRadius="0,0,0,4">
                                    <TextBlock Text="{x:Bind Tag.Value.Name.Value,Mode=OneWay}" Foreground="White" FontSize="16"/>
                                </Border>
                            </Grid>
                        </Border>
                        <TextBlock TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" FontSize="12" Margin="0,4,0,0" Text="{x:Bind FileName.Value}" />
                    </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Grid>
</Window>
